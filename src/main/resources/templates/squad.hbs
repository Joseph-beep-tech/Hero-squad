{{#partial "content"}}
    <div class="container styling">
        <form action="/add-squad" method="post" >
            <div class="form-group">
                <label for="formGroupExampleInput">Squad Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Squad name">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Mission</label>
                <input type="text" class="form-control" id="mission" name="mission" placeholder="Mission">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Volume</label>
                <input type="number" class="form-control" id="volume" name="volume" placeholder="volume">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </form>
    </div>
{{/partial}}
