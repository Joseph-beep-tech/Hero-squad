{{#partial "content"}}
    <div class="heroes container">
        <h2>Heroes.</h2>
    {{#if heroes}}

            <div class="card" style="width: 15rem;">
                <div class="card-body">
                    <h5 class="card-title">{{heroes.heroName}}</h5>
                    <ul class="list-group list-group-flush">
                        <h5 class="card-title">{{heroes.heroName}}</h5>
                        <li class="list-group-item">{{heroes.superPower}}</li>
                        <li class="list-group-item">{{heroes.weakness}}</li>
                        <li class="list-group-item">{{heroes.age}}</li>
                    </ul>
                    <a href="/remove-hero/{{heroes.id}}" class="btn btn-danger">Remove</a>
                    <a href=/modify-hero/{{heroes.id}}" class="btn btn-success">Modify</a>
                </div>
            </div>
        </div>
    {{/if}}
{{/partial}}
{{> layout.hbs}}